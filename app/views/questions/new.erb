<h1>Ask a new question</h1>

<% if @question && !question.errors.empty? %>
	<% @question.error.full_messages.each do |e|%>
		<p><%= e %></p>
	<% end %>
<% end %>

<form action="/questions" method="post">
	<textarea name="question[body]" row="5" cols="30"></textarea>
	<input type="submit" value="Ask!">
</form>