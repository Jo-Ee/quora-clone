<% if session[:user_id].nil? %>
	<h1>Welcome to Quora Clone! Please sign up or login.</h1>
		<a href ="/signup">Sign Up!</a>
		<a href ="/login">Log In!</a>
<% end %>



<h2>Latest Questions!</h2>

<% @question.each_with_index do |q, index| %>
  <a href="/questions/<%= q.id %>">
    <p><%= "#{index + 1})  #{q.body}" %></p>
  </a>
<% end %>

