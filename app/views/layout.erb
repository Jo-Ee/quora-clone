<div class="menu-container">
<% if user_logged_in? %>
  <% @user = current_user %>
  <h2>Welcome to Quora Clone, <%= @user.username %>!</h2>

      <form action="/">
      <input type="submit" value="Home">
      </form>

      <form action="/logout" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Logout">
    </form>

      <form action="/questions/new">
      <input type="submit" value="Got question? Ask here!">
      </form>

      <form action="/user/<%= @user.id %>/questions">
      <input type="submit" value="My Questions">
      </form>

      <form action="/user/<%= @user.id %>/answers">
      <input type="submit" value="My Answers">
      </form>

  <% else %>

    <h1>Welcome to Quora Clone! Please sign up or login.</h1>

    <form action="/signup">
      <input type="submit" value="Sign Up Here!">
      </form>
    <form action="/login">
      <input type="submit" value="Log In">
      </form>

<% end %>

</div>

<hr>
<%= yield %>


