<h1><%=@question.body %></h1>

<h2>Answer:</h2>

<% if @answer && !@answer.errors.empty? %>
	<% @answer.errors.full_messages.each do |e|%>
		<p><%= e %></p>
	<% end %>
<% end %>

<form action="/questions/<%= @question.id %>/answers" method="post">
	<textarea name="body" row="5" cols="30"></textarea>
	<input type="submit" value="Submit Answer">
</form>